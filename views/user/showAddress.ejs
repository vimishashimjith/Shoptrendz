<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Address List</title>
    <link rel="stylesheet" href="/path/to/your/styles.css">
</head>
<body>
    <header>
        <!-- Include breadcrumbs -->
        <nav>
            <ul>
                <% breadcrumbs.forEach(breadcrumb => { %>
                    <li><a href="<%= breadcrumb.url %>"><%= breadcrumb.name %></a></li>
                <% }) %>
            </ul>
        </nav>
    </header>

    <main>
        <h1>Address List</h1>
        <a href="/add-address" class="btn btn-primary">Add New Address</a>
        
        <% if (addresses.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Fullname</th>
                        <th>Mobile</th>
                        <th>Pincode</th>
                        <th>Street</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Country</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% addresses.forEach(address => { %>
                        <tr>
                            <td><%= address.fullname %></td>
                            <td><%= address.mobile %></td>
                            <td><%= address.pincode %></td>
                            <td><%= address.street %></td>
                            <td><%= address.city %></td>
                            <td><%= address.state %></td>
                            <td><%= address.country %></td>
                            <td>
                                <a href="/editAddress?id=<%= address._id %>" class="btn btn-secondary">Edit</a>
                                <a href="/deleteAddress?id=<%= address._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this address?')">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No addresses found.</p>
        <% } %>
    </main>

    <footer>
        <p>&copy; 2024 Your Company</p>
    </footer>
</body>
</html>
