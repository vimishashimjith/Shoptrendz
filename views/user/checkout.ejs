<script>
    let selectedAddressId = null;
// Modified selectAddress function to not remove other addresses
function selectAddress(addressId, index) {
    document.querySelectorAll('.address-card').forEach((card, idx) => {
        if (idx === index) {
            card.classList.add('selected-address');
            const selectButton = card.querySelector('.select-button');
            selectButton.textContent = 'Selected';
            selectButton.disabled = true;
        } else {
            card.classList.remove('selected-address');
            const selectButton = card.querySelector('.select-button');
            selectButton.textContent = 'Select';
            selectButton.disabled = false;
        }
    });

    selectedAddressId = addressId;
    fetchShippingCharge(addressId);
}

    // Function to handle address selection
    async function fetchShippingCharge(addressId) {
    try {
        const response = await fetch(`/shippingCharge?addressId=${addressId}`);
        if (!response.ok) {
            throw new Error('Failed to fetch shipping charge');
        }
        const data = await response.json();
        const shippingCharge = parseFloat(data.shippingCharge);

        let total = parseFloat($('#finalTotal').val()); // current total
        if (isNaN(total)) {
            console.error('Current total amount is not a number');
            swal("Error", "Invalid current total amount.", "error");
            return;
        }
        if (isNaN(shippingCharge)) {
            console.error('Shipping charge is not a number');
            swal("Error", "Invalid shipping charge received.", "error");
            return;
        }

        const newTotal = Math.max(total + shippingCharge, 0);

        // Update current values
        $('#orderTotal').text(newTotal.toFixed(2));
        $('#finalTotal').val(newTotal.toFixed(2));
        
        // Display the shipping charge row
        $('#shippingChargeRow').show();
        $('#shippingChargeAmount').html(`<i class="bi bi-currency-rupee"></i>${shippingCharge.toFixed(2)}`);
        swal("Shipping Charge Added", `Shipping charge ₹${shippingCharge.toFixed(2)} added`, "success");

    } catch (error) {
        console.error('Error fetching shipping charge:', error.message);
        swal("Error", "An error occurred while adding shipping charge. Please try again later.", "error");
    }
}


   
    function placeOrder() {
    const paymentMethod = document.querySelector('input[name="payment"]:checked')?.value;

    if (!selectedAddressId) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Please select an address!'
        });
        return;
    }

    if (!paymentMethod) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Please select a payment method!'
        });
        return;
    }

    $.ajax({
        url: '/checkout',
        type: 'POST',
        data: {
            addressId: selectedAddressId,
            paymentMethod: paymentMethod
        },
        success: function(response) {
            if (response.success) {
                if (paymentMethod === 'Razorpay') {
                    var options = {
                        key: response.razorpayKeyId, // Razorpay Key ID from backend
                        amount: response.amount * 100, // Amount in paise (multiply by 100 for INR)
                        currency: response.currency,
                        name: 'Your Company',
                        description: 'Order ID: ' + response.orderId,
                        image: 'https://your-logo-url.com', // Optional logo URL
                        order_id: response.orderId, // Razorpay Order ID
                        handler: function (paymentResponse) {
                            $.ajax({
                                url: '/paymentProcess', // Backend route to verify the payment
                                type: 'POST',
                                data: {
                                    razorpayPaymentId: paymentResponse.razorpay_payment_id,
                                    razorpayOrderId: paymentResponse.razorpay_order_id,
                                    razorpaySignature: paymentResponse.razorpay_signature
                                },
                                success: function(verifyResponse) {
                                    if (verifyResponse.success) {
                                        Swal.fire('Payment Successful!', 'Your order has been placed.', 'success').then(() => {
                                            window.location.href = '/orders';
                                        });
                                    } else {
                                        Swal.fire('Payment Verification Failed!', 'Please try again.', 'error');
                                    }
                                },
                                error: function() {
                                    Swal.fire('Error!', 'Payment could not be verified.', 'error');
                                }
                            });
                        },
                        prefill: {
                            name: response.customerName,
                            email: response.customerEmail,
                            contact: response.customerPhone
                        },
                        theme: {
                            color: '#6f42c1' // Customize the Razorpay checkout button color
                        }
                    };
                    var rzp = new Razorpay(options);
                    rzp.open();
                } else {
                    Swal.fire('Order Placed!', 'Your order has been successfully placed.', 'success').then(() => {
                        window.location.href = '/orders';
                    });
                }
            } else {
                Swal.fire('Error!', response.message || 'An error occurred while placing your order.', 'error');
            }
        },
        error: function() {
            Swal.fire('Error!', 'Unable to place the order. Please try again later.', 'error');
        }
    });
}

</script>
