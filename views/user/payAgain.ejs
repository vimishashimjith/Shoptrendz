<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Page</title>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>
<body>
    <h2>Complete Your Payment</h2>
    <p>Order ID: <%= orderId %></p>
    <p>Amount: â‚¹<%= (order.amount / 100).toFixed(2) %></p>

    <button id="payButton">Pay Now</button>

    <script>
        document.getElementById('payButton').onclick = function(e) {
            var options = {
                "key": "<%= order.key_id %>", // Enter the Key ID generated from the Dashboard
                "amount": "<%= order.amount %>", // Amount is in currency subunits. Default is Paise. Hence, 100 = INR 1
                "currency": "INR",
                "name": "Your Company Name",
                "description": "Order Payment",
                "order_id": "<%= order.id %>", // Pass the Razorpay Order ID here
                "handler": function(response){
                    // Handle successful payment here
                    console.log(response);
                    // Send payment details to backend for verification
                    fetch('/payment-success', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            orderId: "<%= orderId %>",
                            paymentId: response.razorpay_payment_id,
                            signature: response.razorpay_signature
                        })
                    }).then(res => res.json()).then(data => {
                        if(data.success) {
                            alert("Payment successful!");
                            window.location.href = '/orders'; // Redirect to orders page
                        } else {
                            alert("Payment failed. Please try again.");
                        }
                    });
                },
                "theme": {
                    "color": "#F37254"
                }
            };
            var rzp1 = new Razorpay(options);
            rzp1.open();
            e.preventDefault();
        }
    </script>
</body>
</html>
