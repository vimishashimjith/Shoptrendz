<!-- Breadcrumb Navigation Start -->
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <% breadcrumbs.forEach((crumb, index) => { %>
            <% if (index < breadcrumbs.length - 1) { %>
              <li class="breadcrumb-item"><a href="<%= crumb.url %>"><%= crumb.name %></a></li>
            <% } else { %>
              <li class="breadcrumb-item active" aria-current="page"><%= crumb.name %></li>
            <% } %>
          <% }) %>
        </ol>
      </nav>
    </div>
  </div>
</div>
<!-- Breadcrumb Navigation End -->

<!-- User Profile Header Section -->
<div class="borderNav" style="background-color: #f4f4f4; padding: 20px 0; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
    <div class="container">
      <div class="row justify-content-between align-items-center">
        <div class="col-lg-5">
          <div class="intro-excerpt">
            <h3 style="color: #732fcc;">Hello, <%= user.username %> ðŸ‘‹</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Profile Information Section -->
  <div class="container" style="margin-bottom: 200px;">
    <div class="profile-header text-center" style="padding: 40px 0;">
      
      <h2 style="color:#732fcc; font-weight: 600;"><%= user.name %></h2>
      <p class="lead text-muted"><%= user.email %></p>
      <button class="btn btn-primary" style="padding: 10px 20px; margin-top: 20px;">
        <a href="/editProfile?id=<%= user._id %>" style="color: white; text-decoration: none;">Edit Profile</a>
      </button>
      <ul class="nav nav-pills profile-nav justify-content-center mt-4">
        <li class="nav-item">
          <a class="nav-link active" href="/userDetails"><i class="fas fa-user-circle"></i> Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/orders"><i class="fas fa-box"></i> Orders</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/showAddress?id=<%= user._id %>"><i class="fas fa-map-marker-alt"></i> Address</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#wallet" data-toggle="tab" >Wallet</a>
        </li>
      </ul>
    </div>
  
    <div class="tab-pane fade" id="wallet">
      <div class="card">
          <div class="card-header text-center bg-light">
              <h4>My Wallet</h4>
          </div>
          <div class="card-body">
              <div class="text-center mb-4">
                  <h5>Wallet Balance</h5>
                  <h3><i class="bi bi-currency-rupee"></i><%= amount %></h3>
              </div>
  
              <!-- Transaction History Section -->
              
          </div>
      </div>
  </div>
  
    <!-- Basic Styles -->
    <style>
      .card-header {
        background-color: #f8f9fa;
        border-bottom: none;
        font-weight: bold;
      }
    
      .card-body h5, .card-body h6 {
        font-weight: 600;
      }
    
      .list-group-item {
        font-size: 1rem;
      }
    
      .badge {
        font-size: 0.9rem;
      }
    </style>
    
    <!-- Profile Content Section -->
    <div class="tab-content profile-content">
      <div class="tab-pane fade show active" id="profile">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">Profile Information</div>
          <div class="card-body">
            <p><strong>Username:</strong> <%= user.username %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Phone:</strong> <%= user.mobileno %></p>
            <a href="/changePassword" class="btn btn-secondary mt-3">Change Password</a>
          </div>
        </div>
      </div>
    </div>
  </div>
 
