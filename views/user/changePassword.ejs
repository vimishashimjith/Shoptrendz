

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h4>Change Password</h4>
                </div>
                <div class="card-body">
                    <% if (message) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= message %>
                        </div>
                    <% } %>

                    <form action="/changePassword" method="POST">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Current Password</label>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                            <% if (errors && errors.currentPassword) { %>
                                <span class="text-danger"><%= errors.currentPassword.msg %></span>
                            <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                            <% if (errors && errors.newPassword) { %>
                                <span class="text-danger"><%= errors.newPassword.msg %></span>
                            <% } %>
                        </div>

                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                            <% if (errors && errors.confirmPassword) { %>
                                <span class="text-danger"><%= errors.confirmPassword.msg %></span>
                            <% } %>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Change Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


