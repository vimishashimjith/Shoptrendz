<style>
    .card-img-top {
        width: 100%; 
        height: 495px; /* Let the height adjust to keep the aspect ratio */
     
        object-fit: cover; 
    }
</style>

<!-- Add SweetAlert CSS and JS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<div class="container mt-5">
    <h2 class="mb-4">Your Wishlist</h2>
    <div class="row">
        <% if (wishList && wishList.products.length > 0) { %>
            <% wishList.products.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/uploads/<%= item.productId.images[0].url %>" class="card-img-top" alt="<%= item.productId.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.productId.name %></h5>
                            <p class="card-text">Price: â‚¹<%= item.productId.price.toFixed(2) %></p>
                           
                            <!-- Add Remove Button -->
                            <button class="btn btn-danger remove-from-wishlist" data-product-id="<%= item.productId._id %>" aria-label="Remove <%= item.productId.name %> from wishlist">
                                <i class="fas fa-trash-alt"></i> Remove
                            </button>
                            <a  href="productdetail/<%=  item.productId._id %>"class="btn btn-primary add-to-cart" aria-label="Add <%= item.productId.name %> to cart">
                                <i class="fas fa-shopping-cart"></i> Add to Cart
                            </a>
                          
                           
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    Your wishlist is empty.
                </div>
            </div>
        <% } %>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Include SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
$(document).ready(function() {
    // Handle click event for removing a product from wishlist
    $(document).on('click', '.remove-from-wishlist', function() {
        const productId = $(this).data('product-id');
        const userId = '<%= user ? user.id : "" %>'; // Ensure userId is available in your EJS context

        if (!userId) {
            Swal.fire('Error', 'You must be logged in to remove products from your wishlist.', 'error');
            return;
        }

        // SweetAlert confirmation before removal
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, remove it!',
            cancelButtonText: 'No, cancel!',
        }).then((result) => {
            if (result.isConfirmed) {
                const $btn = $(this);
                $btn.prop('disabled', true).text('Removing...'); // Disable button

                $.ajax({
                    url: `/removeFromwishlist/${productId}`, // Pass productId in URL
                    type: 'POST', // Make sure to use the correct method
                    success: function(response) {
                        Swal.fire(
                            'Removed!',
                            response.message,
                            'success'
                        );
                        // Remove the card element without reloading
                        $btn.closest('.col-md-4').remove();
                    },
                    error: function(error) {
                        console.error('Error removing product:', error);
                        Swal.fire(
                            'Failed!',
                            'Failed to remove product from wishlist.',
                            'error'
                        ); // Show error message
                    },
                    complete: function() {
                        $btn.prop('disabled', false).text('Remove'); // Re-enable button
                    }
                });
            }
        });
    });
});
</script>

