<div class="container mt-5">
    <h2 class="mb-4">Your Wishlist</h2>
    <div class="row">
        <% if (wishList && wishList.products.length > 0) { %>
            <% wishList.products.forEach(item => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="/uploads/<%= item.productId.images[0].url %>" class="card-img-top" alt="<%= item.productId.name %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.productId.name %></h5>
                            <p class="card-text">Price: â‚¹<%= item.productId.price.toFixed(2) %></p>
                           
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-warning" role="alert">
                    Your wishlist is empty.
                </div>
            </div>
        <% } %>
    </div>
</div>

<script>
  

    $(document).on('click', '.remove-from-wishlist', function() {
        const productId = $(this).data('product-id');
        const userId = '<%= userId %>'; // Assuming userId is available in your EJS context

        $.ajax({
            url: '/removeWishlist', // Adjust the URL to match your route
            type: 'DELETE',
            contentType: 'application/json',
            data: JSON.stringify({ userId, productId }),
            success: function(response) {
                alert(response.message); // Optional: Notify the user of success
                location.reload(); // Reload the page to see changes
            },
            error: function(error) {
                console.error('Error removing product:', error);
                alert('Failed to remove product from wishlist.'); // Optional: Notify user of error
            }
        });
    });
</script>