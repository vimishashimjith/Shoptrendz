<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link rel="stylesheet" href="User/assets/css/signup.css">
    <link rel="stylesheet" href="User/assets/css/msg-boxes.css">
</head>
<body>
    <div class="page-wrapper">
        <div class="signup-div">
            <h2 class="heading">Signup</h2>
         
         <style>
            .error-message {
                color: red; 
            }
        </style>
<form action="/signup" method="POST">
    <label for="username">Username:</label>
    <input type="text" id="username" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>">
    <% if (typeof errors !== 'undefined' && errors.username) { %>
        <p class="error-message"><%= errors.username %></p>
    <% } %>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= typeof email !== 'undefined' ? email : '' %>">
    <% if (typeof errors !== 'undefined' && errors.email) { %>
        <p class="error-message"><%= errors.email %></p>
    <% } %>

    <label for="mobileno">Mobile Number:</label>
    <input type="text" id="mobileno" name="mobileno" value="<%= typeof mobileno !== 'undefined' ? mobileno : '' %>">
    <% if (typeof errors !== 'undefined' && errors.mobileno) { %>
        <p class="error-message"><%= errors.mobileno %></p>
    <% } %>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password">
    <% if (typeof errors !== 'undefined' && errors.password) { %>
        <p class="error-message"><%= errors.password %></p>
    <% } %>

    <label for="passwordRe">Confirm Password:</label>
    <input type="password" id="passwordRe" name="passwordRe">
    <% if (typeof errors !== 'undefined' && errors.passwordRe) { %>
        <p class="error-message"><%= errors.passwordRe %></p>
    <% } %>
    <label for="referralCode">Referral Code:</label>
    <input type="text" id="referralCode" name="referralCode" placeholder="Referral Code (optional)">
    
    <div class="input-field form-child button-div">
        <button id="submit-button">Submit</button>
    </div>
    <div class="mt-2px">
        <p>or sign up with</p>
      </div>
      <div class="social-btns">
        
        <a href="/auth/google" class="btn btn-outline-danger">
          <img
            src="User/assets/images/googlesignup.png"
            alt="Google Logo"
            style="width: 24px; height: 24px"
          />
        </a>
      </div>
    </div>

</form>

        </div>
    </div>
</body>
</html>