<!-- Edit Profile Page -->
<div class="borderNav">
    <div class="container">
      <div class="row justify-content-between">
        <div class="col-lg-5">
          <div class="intro-excerpt">
            <h3>Edit Profile</h3>
          </div>
        </div>
        <div class="col-lg-7"></div>
      </div>
    </div>
  </div>
  
  <div class="container-fluid pt-4 px-4">
    <div class="row g-4">
      <div class="col-sm-12 col-xl-6">
        <div class="bg-light rounded h-100 p-4">
          <h6 class="mb-4">Edit User</h6>
  
          <!-- Error Message -->
          <% if (message) { %>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          <% } %>
  
          <!-- Form for Editing Profile -->
          <form action="/editProfile" method="post" id="profile">
            <input type="hidden" value="<%= user._id %>" name="id">
  
            <!-- Username Field -->
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
              <% if (errors && errors.username) { %>
                <span class="text-danger"><%= errors.username.msg %></span>
              <% } %>
            </div>
  
            <!-- Email Field -->
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
              <% if (errors && errors.email) { %>
                <span class="text-danger"><%= errors.email.msg %></span>
              <% } %>
            </div>
  
            <!-- Mobile Number Field -->
            <div class="mb-3">
              <label for="mobileno" class="form-label">Phone</label>
              <input type="tel" class="form-control" id="mobileno" name="mobileno" value="<%= user.mobileno %>" required>
              <% if (errors && errors.mobileno) { %>
                <span class="text-danger"><%= errors.mobileno.msg %></span>
              <% } %>
            </div>
  
            <!-- Save Button -->
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Additional Styling -->
  <style>
    .borderNav {
      background-color: #f8f9fa;
      padding: 20px 0;
      border-bottom: 1px solid #ddd;
      margin-bottom: 20px;
    }
  
    .intro-excerpt h3 {
      color: #333;
      font-weight: bold;
    }
  
    .bg-light {
      background-color: #fff !important;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
  
    .btn-primary {
      background-color: #007bff;
      border: none;
    }
  
    .btn-primary:hover {
      background-color: #0056b3;
    }
  
    .form-control {
      border-radius: 5px;
      border: 1px solid #ddd;
      box-shadow: none;
    }
  
    .alert {
      margin-bottom: 20px;
    }
  </style>
  