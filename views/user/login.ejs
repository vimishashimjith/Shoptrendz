<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="User/assets/css/login.css">
    <link rel="stylesheet" href="User/assets/css/msg-boxes.css">
    
    <style>
        .msg-box .msg-para {
            color: red; 
        }
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="login-div">
            <h2 class="heading">Login</h2>
            <form action="/login" method="post" id="login-form">
                <div class="input-field form-child">
                    <label for="email">Email: </label>
                    <input type="email" placeholder="xyz@gmail.com" name="email" required>
                </div>
                <div class="input-field form-child">
                    <label for="password">Password: </label>
                    <input type="password" placeholder="password" name="password" required>
                </div>
                <div class="link form-child">
                    <a href="/signup">Don't have an account? Signup</a>
                </div>
                <div class="link form-child">
                    <a href="/forget">Forget password?</a>
                </div>
                <div class="input-field form-child button-div">
                    <button id="submit-button">Submit</button>
                </div>
                

                <% if (typeof message !== 'undefined') { %>
                    <p style="color: red;"><%= message %></p>
                <% } %>
            </form>
        </div>
    </div>
</body>
</html>
