<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Edit Product</title>
  <link rel="shortcut icon" type="image/png" href="../Admin/assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
  <link rel="stylesheet" href="../Admin/assets/css/styles.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
  <style>
    .image-preview {
        width: 679px;
        height: 679px;
        margin-top: 10px;
        position: relative;
        z-index: 10;
    }

    .img-thumbnail {
        max-width: 50%;
        max-height: 50%;
    }

    .remove-icon {
        display: none;
        font-size: 24px;
        color: red;
        cursor: pointer;
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 20;
    }
  </style>
</head>
<body>
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full" data-sidebar-position="fixed" data-header-position="fixed">
    <%- include('../partials/admin/sidebar.ejs') %>
    <div class="body-wrapper">
      <%- include('../partials/admin/header.ejs') %>
      <br><br>
      <div class="page-wrapper">
        <div class="container-fluid">
          <div class="card">
            <div class="card-body">
              <h1 class="card-title">Edit Product</h1>

              <% if (message) { %>
                <div class="alert alert-info"><%= message %></div>
              <% } %>

              <form id="image-form" action="/admin/product-edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
                <!-- Product Details -->
                <div class="mb-3">
                  <label for="name" class="form-label">Product Name</label>
                  <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>" required>
                </div>

                <div class="mb-3">
                  <label for="brand" class="form-label">Brand</label>
                  <input type="text" class="form-control" id="brand" name="brand" value="<%= product.brand %>" required>
                </div>

                <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <textarea class="form-control" id="description" name="description" rows="3" required><%= product.description %></textarea>
                </div>

                <div class="mb-3">
                  <label for="category" class="form-label">Category</label>
                  <select class="form-control" id="category" name="category" required>
                    <% categories.forEach(cat => { %>
                      <option value="<%= cat._id %>" <%= cat._id.equals(product.category) ? 'selected' : '' %>><%= cat.name %></option>
                    <% }) %>
                  </select>
                </div>

                <!-- Sizes and Stocks -->
                <div class="mb-3">
                  <label class="form-label">Sizes and Stocks</label>
                  <div id="size-stock-container">
                    <% product.sizes.forEach((size, index) => { %>
                      <div class="input-group mb-3 size-stock-item">
                        <select class="form-control size-select" name="sizes[<%= index %>][size]" required>
                          <% validSizes.forEach(validSize => { %>
                            <option value="<%= validSize %>" <%= size.size === validSize ? 'selected' : '' %>><%= validSize %></option>
                          <% }) %>
                        </select>
                        <input type="number" class="form-control stock-input" name="sizes[<%= index %>][stock]" value="<%= size.stock %>" placeholder="Stock" required>
                        <div class="input-group-append">
                          <button type="button" class="btn btn-danger remove-size-stock">Remove</button>
                        </div>
                      </div>
                    <% }) %>
                  </div>
                  <button type="button" id="add-size-stock" class="btn btn-secondary">Add Size/Stock</button>
                </div>

                <!-- Price -->
                <div class="mb-3">
                  <label for="price" class="form-label">Price</label>
                  <input type="number" class="form-control" id="price" name="price" value="<%= product.price %>" required>
                </div>

                <!-- Images -->
                <div class="mb-4">
                  <label class="form-label">Images</label>
                  <input class="form-control" type="file" name="images[]" accept="image/png, image/jpeg, image/jpg" multiple>

                  <span id="image-error" style="font-size: 14px; margin-top: -20px"></span>
                  <% product.images.forEach((pic, index) => { %>
                    <button class="btn btn-link" id="dropdown-trigger<%= index + 1 %>" type="button" onclick="togglePreview(<%= index + 1 %>)">Click Here to Preview Image <%= index + 1 %></button>
                    <div id="image-preview-container<%= index + 1 %>" class="image-preview mb-2" style="display:none;">
                      <div id="image-preview<%= index + 1 %>" class="image-preview mb-2">
                        <img src="/uploads/<%= pic.url %>" alt="Product Image <%= index + 1 %>" style="width: 100px; height: auto; margin-right: 10px;">
                      </div>
                      <button class="btn btn-secondary mt-2" id="crop-button<%= index + 1 %>" style="display: none;" type="button" onclick="cropImage(<%= index + 1 %>)">Crop</button>
                      <i class="fas fa-sync-alt remove-icon" id="remove-icon<%= index + 1 %>" onclick="removeImage(<%= index + 1 %>)"></i>
                    </div>
                  <% }) %>
                </div>

                <button type="submit" class="btn btn-primary">Update Product</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js"></script>
  <script>
    const croppers = {};

    function previewAndCropImage(event, id) {
        const input = event.target;
        const file = input.files[0];

        if (file) {
            const reader = new FileReader();
            reader.onload = function(e) {
                const previewContainer = document.getElementById(`image-preview${id}`);
                previewContainer.innerHTML = `<img id="image-to-crop${id}" src="${e.target.result}" class="img-fluid"/>`;

                const cropButton = document.getElementById(`crop-button${id}`);
                cropButton.style.display = 'inline-block';

                const removeIcon = document.getElementById(`remove-icon${id}`);
                removeIcon.style.display = 'inline-block';

                const image = document.getElementById(`image-to-crop${id}`);

                if (croppers[id]) {
                    croppers[id].destroy();
                }

                croppers[id] = new Cropper(image, {
                    aspectRatio: 1,
                    viewMode: 3,
                    autoCropArea: 1,
                    responsive: true,
                    scalable: true,
                    zoomable: true,
                    background: false,
                    minContainerWidth: 679,
                    minContainerHeight: 679
                });
            };
            reader.readAsDataURL(file);
        }
    }

    function cropImage(id) {
        const previewContainer = document.getElementById(`image-preview${id}`);
        const croppedCanvas = croppers[id].getCroppedCanvas({
            width: 679,
            height: 679
        });
        const croppedImage = document.createElement('img');
        croppedImage.src = croppedCanvas.toDataURL('image/png');
        previewContainer.innerHTML = '';
        previewContainer.appendChild(croppedImage);

        croppedCanvas.toBlob(blob => {
            const fileInput = document.querySelector(`input[name="images[]"]`);
            const dataTransfer = new DataTransfer();
            const file = new File([blob], fileInput.files[0].name, { type: 'image/png' });
            dataTransfer.items.add(file);
            fileInput.files = dataTransfer.files;
        }, 'image/png');
    }

    function removeImage(id) {
        const input = document.querySelector(`input[name="images[]"]`);
        const previewContainer = document.getElementById(`image-preview${id}`);
        const cropButton = document.getElementById(`crop-button${id}`);
        const removeIcon = document.getElementById(`remove-icon${id}`);
       
        input.value = '';
        previewContainer.innerHTML = '';
        cropButton.style.display = "none";
        removeIcon.style.display = "none";

        if (croppers[id]) {
            croppers[id].destroy();
            delete croppers[id];
        }
    }

    function togglePreview(id) {
      const previewContainer = document.getElementById(`image-preview-container${id}`);
      previewContainer.style.display = previewContainer.style.display === 'none' ? 'block' : 'none';
    }

   
  </script>
  <script>
    // Dynamic Indexing
    let sizeIndex = <%= product.sizes.length %>; // Start with the number of existing sizes

    $(document).ready(function() {
        // Add Size/Stock
        $('#add-size-stock').click(function() {
            const sizeStockHtml = `
              <div class="input-group mb-3 size-stock-item" data-index="${sizeIndex}">
                <select class="form-control size-select" name="sizes[${sizeIndex}][size]" required>
                  <% validSizes.forEach(size => { %>
                    <option value="<%= size %>"><%= size %></option>
                  <% }) %>
                </select>
                <input type="number" class="form-control stock-input" name="sizes[${sizeIndex}][stock]" placeholder="Stock" required>
                <div class="input-group-append">
                  <button type="button" class="btn btn-danger remove-size-stock">Remove</button>
                </div>
              </div>
            `;
            $('#size-stock-container').append(sizeStockHtml);
            sizeIndex++; // Increment the index for the next size/stock entry
        });

        // Remove Size/Stock
        $(document).on('click', '.remove-size-stock', function() {
            $(this).closest('.size-stock-item').remove();
            updateSizeIndexes(); // Update the index for remaining size/stock inputs
        });
    });

    // Function to update index in name attributes after removal
    function updateSizeIndexes() {
        $('#size-stock-container .size-stock-item').each(function(index) {
            $(this).attr('data-index', index);
            $(this).find('.size-select').attr('name', `sizes[${index}][size]`);
            $(this).find('.stock-input').attr('name', `sizes[${index}][stock]`);
        });
        sizeIndex = $('#size-stock-container .size-stock-item').length; // Update global index count
    }
</script>

</body>
</html>