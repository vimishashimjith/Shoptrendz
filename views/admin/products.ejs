<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Product List</title>
  <link rel="shortcut icon" type="image/png" href="../Admin/assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="../Admin/assets/css/styles.min.css" />
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #cee9e0;
      margin: 0;
      padding: 0;
    }

    .btn {
      background-color: #6e7b8a;
      color: #ffffff;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      border: none;
    
      cursor: pointer;
    }

    .btn:hover {
      background-color: #007bff;
    }

    .card-title {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 20px 0;
    }

    .card-title h3 {
      margin: 0;
      color: #343a40;
    }

    .table {
      background-color: #ffffff;
      border-radius: 8px;
      overflow: hidden;
      margin-top: 20px;
      border: 2px solid #007bff; /* Add border to the table */
    }

    .table th, .table td {
      border: 1px solid #dee2e6; /* Border for table cells */
      padding: 12px; /* Add padding for better spacing */
      text-align: center; /* Center align text */
    }

    .table thead th {
      background-color:#5678e6;
      color: #ffffff;
      font-weight: bold;
    }

    .table tbody tr:nth-child(even) {
      background-color: #f2f2f2;
    }

    .table tbody tr:hover {
      background-color: #e9ecef;
    }

    .pagination {
      justify-content: center;
      margin-top: 20px;
    }

    .pagination .page-item.active .page-link {
      background-color: #007bff;
      border-color: #007bff;
    }

    .pagination .page-link {
      border-radius: 5px;
      border: 1px solid #dee2e6;
      padding: 8px 16px;
      color: #007bff;
    }

    .pagination .page-item {
      margin: 0 2px;
    }
  </style>
</head>

<body>

  <!-- Page Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">

    <!-- Sidebar -->
    <%- include('../partials/admin/sidebar.ejs') %>

    <!-- Body Wrapper -->
    <div class="body-wrapper">
      <!-- Header -->
      <%- include('../partials/admin/header.ejs') %>

      <!-- Main Content -->
      <div class="page-wrapper">
        <br>
        <br>
        <br>

        <!-- Product List Title and Button -->
        <div class="card-title">
          <h3>Product List</h3>
          <div>
            <form id="searchForm" action="/admin/products" method="get">
              <input type="text" placeholder="Search Product" style="width: 500px;" name="search" value="<%= search || '' %>">
              <button type="submit">Search</button>
          </form>
          
        </div>
          <a href="/admin/product-add" class="btn">Add New Product</a>
        </div>

        <!-- Table Section -->
        <div class="table-responsive">
          <table class="table table-bordered text-center">
            <thead class="thead-light">
              <tr>
                
                <th>Name</th>
                <th>Brand</th>
                <th>Description</th>
                <th>Category</th>
                <th>Sizes & Stocks</th>
                <th>Price</th>
                <th>Images</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% products.forEach(prod => { %>
              <tr>
                
                <td><%= prod.name %></td>
                <td><%= prod.brand %></td>
                <td><%= prod.description %></td>
                <td><%= prod.category ? prod.category.name : 'N/A' %></td>
                <td>
                  <% prod.sizes.forEach((size, j) => { %>
                  <%= size.size %> (<%= size.stock %>)
                  <% if (j < prod.sizes.length - 1) { %><br /><% } %>
                  <% }) %>
                </td>
                <td><%= prod.price %></td>
                <td>
                  <% prod.images.forEach(img => { %>
                  <img src="/uploads/<%= img.url %>" alt="Product Image" width="50">
                  <% }) %>
                </td>
                <td>
                  <a href="/admin/product-edit/<%= prod._id %>" class="btn btn-secondary">Edit</a>
                  <br>
                  <br>
                  <button type="button" class="btn btn-warning">
                    <% if (!prod.softDelete) { %>
                    <a href="/admin/products/softdeleteproduct?id=<%= prod._id %>" class="text-light">Unlink</a>
                    
                    <% } else { %>
                     <br> 
                    <a href="/admin/products/removeSoftDeleteProduct?id=<%= prod._id %>" class="text-light">Link</a>
                    <% } %>
                  </button>
                  <br>
                  <br>
                  <button type="button" class="btn btn-primary"> <a href="/admin/productOffer?id=<%= prod._id %>" class="text-light">Offer</a></button>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>

          <!-- Pagination -->
          <ul class="pagination">
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                <a class="page-link" href="/admin/products?page=<%= i %>&search=<%= search %>"><%= i %></a>
            </li>
            <% } %>
        </ul>
        

        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="../Admin/assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../Admin/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="../Admin/assets/js/sidebarmenu.js"></script>
  <script src="../Admin/assets/js/app.min.js"></script>
  <script src="../Admin/assets/libs/simplebar/dist/simplebar.js"></script>

</body>

</html>
