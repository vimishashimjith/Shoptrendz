<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel="stylesheet" href="../Admin/assets/css/styles.min.css" />
    <style>
        .order-details {
            margin: 20px 0;
        }

        .order-details h4 {
            margin-bottom: 20px;
        }

        .order-info,
        .items-info {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
        }

        .items-info table {
            width: 100%;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
        }
    </style>
</head>

<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
        data-sidebar-position="fixed" data-header-position="fixed">
        <%- include('../partials/admin/sidebar.ejs') %>
        <div class="body-wrapper">
            <%- include('../partials/admin/header.ejs') %>
            <div class="container-fluid custom-container">
                <div class="col-12">
                    <div class="bg-light rounded h-100 p-4">
                        <h4>Order Details - <%= order.orderId %></h4>
                        <div class="order-details">
                            <div class="order-info">
                                <h5>Order Information</h5>
                                <p><strong>User:</strong> <%= order.userId ? order.userId.username : 'Unknown' %></p>
                                <p><strong>Order Date:</strong> <%= new Date(order.orderDate).toLocaleDateString() %></p>
                                <p><strong>Total Amount:</strong> ₹<%= order.totalAmount.toFixed(2) %></p>
                                <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
                                <p><strong>Payment Status:</strong> <%= order.paymentStatus %></p>
                                <p><strong>Order Status:</strong> <%= order.status %></p>
                                

                            </div>
                            <div class="order-address">
                                <strong>Shipping Address:</strong> 
                                <% if (order.addressId) { %>
                                    <p><%= order.addressId.street %>, <%= order.addressId.city %>, <%= order.addressId.pincode %></p>
                                <% } else { %>
                                    <p>No shipping address provided</p>
                                <% } %>
                            </div>
                            <div class="items-info">
                                <h5>Ordered Items</h5>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (Array.isArray(order.products) && order.products.length > 0) { %>
                                            <% order.products.forEach(product => { %>
                                                <tr>
                                                    <td><%= product.productId.name || 'N/A' %></td>
                                                    <td><%= product.quantity || 'N/A' %></td>
                                                    <td>₹<%= product.productId.price ? product.productId.price.toFixed(2) : '0.00' %></td>
                                                    <td>₹<%= (product.productId.price * product.quantity).toFixed(2) %></td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4">No items available.</td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                    
                                    
                                    
                                </table>
                            </div>

                            <div class="order-actions mt-4">
                                <a href="/admin/orderManagement" class="btn btn-secondary">Back to Orders</a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="../Admin/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="../Admin/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../Admin/assets/js/sidebarmenu.js"></script>
    <script src="../Admin/assets/js/app.min.js"></script>
    <script src="../Admin/assets/libs/simplebar/dist/simplebar.js"></script>
    <script>
        function cancelOrder(orderId) {
            swal({
                title: "Are you sure?",
                text: "Once canceled, this action cannot be undone.",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willCancel) => {
                if (willCancel) {
                    fetch(`/admin/cancelOrder/${orderId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            swal("Canceled!", "The order has been canceled.", "success").then(() => {
                                window.location.href = '/admin/orders';
                            });
                        } else {
                            swal("Error", "An error occurred: " + data.message, "error");
                        }
                    })
                    .catch(error => {
                        swal("Error", "An error occurred.", "error");
                    });
                }
            });
        }
    </script>
</body>

</html>
